<% if @user.errors.blank? %>
  $("tbody").prepend('<%= j render('list', user: @user) %>');
  $("#new_user_modal").modal('hide');
<% else %>
  $(".field .red.pointing").remove();
  <% @user.errors.messages.each do |key, value| %>
    $("#user_<%= key %>").parent().addClass('error');
    $("#user_<%= key %>").parent().append("<div class='ui basic red pointing prompt label transition visible'><%= value[0] %></div>");
  <% end %>
<% end %>
$(".button").popup();
$(".icon").popup();